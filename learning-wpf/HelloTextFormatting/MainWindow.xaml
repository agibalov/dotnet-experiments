<Window x:Class="HelloTextFormatting.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
       
    <Grid>
        <TextBlock>
            <Span>You have</Span>
            <Span FontWeight="Bold">$<Run Text="{Binding Money}" /></Span>
            <Span FontStyle="Italic">(whoa, that's a lot)</Span>
        </TextBlock>
    </Grid>
</Window>
