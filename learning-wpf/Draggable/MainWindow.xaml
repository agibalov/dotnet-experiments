<Window x:Class="Draggable.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Canvas Name="MyCanvas" Background="Transparent">
            <Grid Name="MyRect" Canvas.Left="0" Canvas.Top="0" Width="100" Height="100">
                <Rectangle Fill="DeepPink" RadiusX="2" RadiusY="2" />
                <TextBox Height="20" Margin="5,5,5,5" />
            </Grid>
        </Canvas>
    </Grid>
</Window>
